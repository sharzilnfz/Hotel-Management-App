                              value={promoCode}
                              onChange={(e) => setPromoCode(e.target.value)}
                              className="pl-9 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-hotel-burgundy focus:border-transparent"
                              disabled={!!appliedPromo}
                            />
                          </div>
                          {appliedPromo ? (
                            <Button
                              type="button"

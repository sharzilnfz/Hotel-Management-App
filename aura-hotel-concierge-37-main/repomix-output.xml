              <span>Total</span>
              <span className="text-hotel-burgundy">${totalPrice}</span>
            </div>
            
            {/* Loyalty Points */}
            {loyaltyPoints && (
              <div className="flex items-center mt-3 text-sm text-amber-700 bg-amber-50 p-2 rounded">
                <Award size={16} className="mr-1 text-amber-500" />

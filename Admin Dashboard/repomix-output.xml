        </Tabs>
      </div>
      
      <div className="flex justify-around px-2 py-3">
        {navItems.map((item) => {
          const isActive = 
            (item.path === "/" && pathname === "/") || 
            (item.path !== "/" && pathname.startsWith(item.path));
          
          return (
            <Link
              key={item.path}

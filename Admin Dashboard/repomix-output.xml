    switch (status) {
      case "New":
        return <AlertCircle className="h-4 w-4" />;
      case "Contacted":
        return <MessageSquare className="h-4 w-4" />;
      case "Confirmed":
        return <CheckCircle className="h-4 w-4" />;
      case "Declined":
        return <XCircle className="h-4 w-4" />;
      default:
        return null;

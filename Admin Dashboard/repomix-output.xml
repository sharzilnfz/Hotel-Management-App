                                    render={({ field: { value, onChange, ...fieldProps } }) => (
                                        <FormItem>
                                            <FormLabel>Add New Image (Optional)</FormLabel>
                                            <FormControl>
                                                <div className="space-y-3">
                                                    <Input
                                                        type="file"
                                                        accept="image/*"
                                                        {...fieldProps}
                                                        onChange={(e) => {
                                                            onChange(e.target.files);
                                                            handleImageChange(e);

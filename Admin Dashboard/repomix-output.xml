  // Recent events
  const recentEvents = [
    { id: "e1", name: "Summer Jazz Night", date: "2025-04-15", attendance: 45, revenue: 3375, status: "completed" },
    { id: "e2", name: "Wine Tasting Gala", date: "2025-04-20", attendance: 50, revenue: 6000, status: "completed" },

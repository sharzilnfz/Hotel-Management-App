                          <SelectTrigger>
                            <SelectValue placeholder="Select a refund policy" />
                          </SelectTrigger>
                        </FormControl>
                        <SelectContent>
                          <SelectItem value="Full refund if cancelled 48 hours before the event. 50% refund if cancelled 24 hours before.">

    { icon: <Heart size={20} />, label: "Spa", path: "/spa" },
    { icon: <Ticket size={20} />, label: "Events", path: "/events" },
    { icon: <Utensils size={20} />, label: "Dining", path: "/restaurant" },
    { icon: <Award size={20} />, label: "Rewards", path: "/loyalty" },

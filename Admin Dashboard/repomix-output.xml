    const [editDepartmentDescription, setEditDepartmentDescription] = useState("");

    // Get current user from localStorage
    useEffect(() => {
        const userDataString = localStorage.getItem("currentUser");
        if (userDataString) {
            setCurrentUser(JSON.parse(userDataString));

    role: "Manager",
    name: "Restaurant Manager",
    department: "Food & Beverage",
    accessLevel: "Administrative"
  },
  // Maintenance staff
  { 
    email: "maintenance@parkside.com", 
    password: "staff123", 
    role: "Staff",
    name: "Maintenance Worker",
    department: "Maintenance",
    accessLevel: "Limited"
  },
  // Spa & Wellness staff
  { 
    email: "spa@parkside.com", 
